<div class="form-container">
    <div class="form-header">
        <h1>{{ form_title|default('Ajouter un Livre') }}</h1>
        <p>Remplissez les informations du livre</p>
    </div>
    
    {{ form_start(form) }}
    
    {% set fields = [] %}
    {% for field in form %}
        {% if field.vars.name != '_token' %}
            {% set fields = fields|merge([field]) %}
        {% endif %}
    {% endfor %}
    
    {% for i in 0..(((fields|length - 1) / 2)|round(0, 'floor')) %}
        <div class="form-row {% if (i * 2 + 1) >= fields|length %}full{% endif %}">
            <div class="form-group">
                {% set field = fields[i * 2] %}
                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                {% if field.vars.help %}
                    <small class="form-text">{{ field.vars.help }}</small>
                {% endif %}
                {{ form_errors(field) }}
            </div>
            
            {% if (i * 2 + 1) < fields|length %}
                <div class="form-group">
                    {% set field = fields[i * 2 + 1] %}
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {% if field.vars.help %}
                        <small class="form-text">{{ field.vars.help }}</small>
                    {% endif %}
                    {{ form_errors(field) }}
                </div>
            {% endif %}
        </div>
    {% endfor %}
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_livre_index') }}" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Annuler
        </a>
    </div>
    
    {{ form_end(form) }}
</div>
