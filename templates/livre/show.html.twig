{% extends 'base.html.twig' %}

{% block title %}D√©tails du Livre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Supprimer l'arri√®re-plan bleu */
        main {
            background-color: #f8fafc !important;
        }
        
        .show-container {
            background-color: #ffffff;
            padding: 0;
            border-radius: 12px;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 10px 20px rgba(0, 0, 0, 0.06);
            max-width: 1000px;
            margin: 3rem auto;
            overflow: hidden;
        }
        
        .show-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 2.5rem 2rem;
            color: white;
            border-bottom: none;
            margin: 0;
            border-radius: 0;
        }
        
        .show-header h1 {
            font-size: 2.25rem;
            font-weight: 700;
            color: white;
            margin: 0;
            letter-spacing: -0.8px;
        }
        
        .book-top {
            display: flex;
            gap: 2.5rem;
            margin-bottom: 2.5rem;
            align-items: flex-start;
            padding: 2rem;
            border-bottom: 1px solid #f0f1f5;
        }
        
        .book-cover {
            width: 180px;
            height: 260px;
            border-radius: 8px;
            overflow: hidden;
            background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
            border: none;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .book-cover:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
        }
        
        .book-cover img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .book-initial {
            font-size: 4rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .book-meta {
            flex: 1;
        }
        
        .book-meta-line {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            font-size: 0.95rem;
            color: #4b5563;
            margin-bottom: 1.5rem;
        }
        
        .book-chip {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.6rem 1rem;
            border-radius: 20px;
            background: linear-gradient(135deg, #667eea1a 0%, #764ba21a 100%);
            border: 1px solid #667eea33;
            color: #667eea;
            font-weight: 500;
        }
        
        .detail-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 0;
            padding: 0 2rem;
            padding-bottom: 2rem;
        }
        
        .detail-item {
            padding: 1.5rem;
            border: 1px solid #f0f1f5;
            border-radius: 8px;
            background: linear-gradient(135deg, #fafbfc 0%, #f5f6f8 100%);
            transition: all 0.3s ease;
        }
        
        .detail-item:hover {
            border-color: #667eea;
            background: #ffffff;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }
        
        .detail-label {
            font-size: 0.7rem;
            font-weight: 700;
            color: #667eea;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.75rem;
        }
        
        .detail-value {
            font-size: 1.1rem;
            color: #1f2937;
            word-break: break-word;
            font-weight: 500;
        }
        
        .detail-value strong {
            font-weight: 700;
        }
        
        .badge-stock {
            display: inline-block;
            padding: 0.6rem 1rem;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 700;
        }
        
        .badge-stock.in-stock {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #047857;
        }
        
        .badge-stock.out-stock {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
        }
        
        .price-display {
            font-size: 1.75rem;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .isbn-code {
            font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
            font-size: 0.85rem;
            background-color: #f0f1f3;
            color: #667eea;
            padding: 0.4rem 0.8rem;
            border-radius: 4px;
            border: 1px solid #e5e7eb;
            letter-spacing: 0.5px;
        }
        
        .actions-section {
            display: flex;
            gap: 1rem;
            padding: 2rem;
            border-top: 1px solid #f0f1f5;
            margin-top: 0;
            flex-wrap: wrap;
        }
        
        .btn-back {
            background-color: #f3f4f6;
            color: #6b7280;
            border: 1px solid #e5e7eb;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            cursor: pointer;
        }
        
        .btn-back:hover {
            background-color: #e5e7eb;
            border-color: #9ca3af;
            color: #374151;
        }
        
        .btn-edit {
            background-color: #ecfdf3;
            color: #16a34a;
            border: 1px solid #bbf7d0;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            cursor: pointer;
        }
        
        .btn-edit:hover {
            background-color: #bbf7d0;
            border-color: #16a34a;
            color: #15803d;
        }
        
        .btn-delete {
            background-color: #fff5f5;
            color: #dc2626;
            border: 1px solid #fecaca;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            cursor: pointer;
        }
        
        .btn-delete:hover {
            background-color: #fee2e2;
            border-color: #dc2626;
            color: #991b1b;
        }

        .btn-wishlist {
            background-color: #fef3c7;
            color: #d97706;
            border: 1px solid #fcd34d;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            cursor: pointer;
        }

        .btn-wishlist:hover {
            background-color: #fcd34d;
            border-color: #d97706;
            color: #b45309;
        }

        .btn-wishlist.in-wishlist {
            background: linear-gradient(135deg, #fef08a 0%, #fef3c7 100%);
            color: #d97706;
            border: 1px solid #fcd34d;
        }

        .btn-wishlist.in-wishlist:hover {
            background: linear-gradient(135deg, #fcd34d 0%, #fbbf24 100%);
        }

        .btn-add-cart {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            cursor: pointer;
        }

        .btn-add-cart:hover {
            box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
            transform: translateY(-2px);
        }

        .btn-add-cart:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .relations-section {
            margin-top: 0;
            padding: 2rem;
            border-top: 1px solid #f0f1f5;
            border-bottom: 1px solid #f0f1f5;
        }
        
        .relations-title {
            font-size: 0.85rem;
            font-weight: 700;
            color: #667eea;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
        }
        
        .relation-item {
            background: linear-gradient(135deg, #fafbfc 0%, #f5f6f8 100%);
            border: 1px solid #e5e7eb;
            padding: 1rem 1.25rem;
            border-radius: 6px;
            margin-bottom: 0.75rem;
            display: block;
            font-size: 0.95rem;
            color: #374151;
            transition: all 0.3s ease;
        }
        
        .relation-item:hover {
            border-color: #667eea;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.1);
        }

        .star-btn:hover {
            transform: scale(1.1);
        }

        .star-btn.active {
            color: #fbbf24 !important;
        }
    </style>
    <script>
        let selectedRating = 0;
        let noteInput = null;
        const ratingText = document.getElementById('rating-text');

        // Trouver le champ note (peut avoir diff√©rents noms selon Symfony)
        document.addEventListener('DOMContentLoaded', function() {
            noteInput = document.querySelector('input[name*="[note]"]') || 
                       document.querySelector('#avis_note') ||
                       document.querySelector('select[name*="[note]"]');
            
            if (noteInput && noteInput.value) {
                selectRating(parseInt(noteInput.value));
            }
        });

        function highlightStars(rating) {
            const stars = document.querySelectorAll('.star-btn');
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.style.color = '#fbbf24';
                } else {
                    star.style.color = '#e5e7eb';
                }
            });
        }

        function resetStars() {
            const stars = document.querySelectorAll('.star-btn');
            stars.forEach((star, index) => {
                if (index < selectedRating) {
                    star.style.color = '#fbbf24';
                    star.classList.add('active');
                } else {
                    star.style.color = '#e5e7eb';
                    star.classList.remove('active');
                }
            });
        }

        function selectRating(rating) {
            selectedRating = rating;
            if (noteInput) {
                noteInput.value = rating;
                // D√©clencher un √©v√©nement change pour Symfony
                noteInput.dispatchEvent(new Event('change', { bubbles: true }));
            }
            
            const stars = document.querySelectorAll('.star-btn');
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.style.color = '#fbbf24';
                    star.classList.add('active');
                } else {
                    star.style.color = '#e5e7eb';
                    star.classList.remove('active');
                }
            });

            // Mettre √† jour le texte
            if (ratingText) {
                const texts = ['', 'Tr√®s mauvais', 'Mauvais', 'Moyen', 'Bien', 'Excellent'];
                ratingText.textContent = texts[rating] || '';
            }
        }
    </script>
{% endblock %}

{% block body %}
<div class="container-fluid" style="padding: 2rem 0;">
    <div class="show-container">
        <div class="show-header">
            <h1>{{ livre.titre }}</h1>
        </div>
        
        <div class="book-top">
            <div class="book-cover">
                {% if livre.image %}
                    <img src="{{ asset('assets/img/books/' ~ livre.image) }}" alt="{{ livre.titre }}">
                {% else %}
                    <div class="book-initial">
                        {{ livre.titre|slice(0, 1)|upper }}
                    </div>
                {% endif %}
            </div>
            <div class="book-meta">
                <div class="book-meta-line">
                    {% if livre.categorie %}
                        <span class="book-chip">
                            <i class="bi bi-tag"></i>
                            {{ livre.categorie.designation }}
                        </span>
                    {% endif %}
                    {% if livre.auteurs|length > 0 %}
                        <span class="book-chip">
                            <i class="bi bi-person"></i>
                            {{ livre.auteurs|first.prenom }} {{ livre.auteurs|first.nom }}
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="detail-grid">
            <div class="detail-item">
                <div class="detail-label">Identifiant</div>
                <div class="detail-value">#{{ livre.id }}</div>
            </div>
            
            <div class="detail-item">
                <div class="detail-label">Quantit√© en stock</div>
                <div class="detail-value">
                    <span class="badge-stock {% if livre.qte > 0 %}in-stock{% else %}out-stock{% endif %}">
                        {{ livre.qte }} unit√©s
                    </span>
                </div>
            </div>
            
            <div class="detail-item">
                <div class="detail-label">Prix</div>
                <div class="detail-value">
                    <span class="price-display">{{ livre.prix|number_format(2, ',', '.') }} ‚Ç¨</span>
                </div>
            </div>
            
            <div class="detail-item">
                <div class="detail-label">ISBN</div>
                <div class="detail-value"><code class="isbn-code">{{ livre.isbn }}</code></div>
            </div>
            
            <div class="detail-item">
                <div class="detail-label">Date de publication</div>
                <div class="detail-value">{{ livre.datapub ? livre.datapub|date('d/m/Y') : '‚Äî' }}</div>
            </div>
        </div>
        
        {% if livre.editeur %}
        <div class="relations-section">
            <div class="relations-title">üìñ √âditeur</div>
            <div class="relation-item">
                <strong>{{ livre.editeur.nom }}</strong>
                {% if livre.editeur.pays %}<span class="text-muted"> ‚Ä¢ {{ livre.editeur.pays }}</span>{% endif %}
            </div>
        </div>
        {% endif %}
        
        {% if livre.auteurs|length > 0 %}
        <div class="relations-section">
            <div class="relations-title">‚úçÔ∏è Auteurs</div>
            {% for auteur in livre.auteurs %}
            <div class="relation-item">
                {{ auteur.prenom }} <strong>{{ auteur.nom }}</strong>
            </div>
            {% endfor %}
        </div>
        {% endif %}

        {# Section Avis client #}
        <div class="reviews-section" style="padding: 2rem; border-top: 1px solid #f0f1f5;">
            <h2 style="font-size: 1.5rem; font-weight: 700; color: #1f2937; margin-bottom: 2rem;">
                Avis client
            </h2>

            {# Carte Laisser un avis #}
            {% if is_granted('ROLE_USER') and not user_has_review %}
                <div style="background: #ffffff; border: 1px solid #e5e7eb; border-radius: 12px; padding: 2rem; margin-bottom: 2rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
                    <h3 style="font-size: 1.2rem; font-weight: 600; color: #374151; margin-bottom: 1.5rem;">
                        Laisser un avis
                    </h3>
                    
                    {{ form_start(form, {'attr': {'class': 'avis-form'}}) }}
                        {# S√©lection d'√©toiles #}
                        <div style="margin-bottom: 1.5rem;">
                            <label style="display: block; font-weight: 600; color: #374151; margin-bottom: 0.75rem;">
                                Note (√©toiles)
                            </label>
                            <div class="star-rating" style="display: flex; gap: 0.5rem; align-items: center;">
                                {% for i in 1..5 %}
                                    <button type="button" 
                                            class="star-btn" 
                                            data-rating="{{ i }}"
                                            style="background: none; border: none; font-size: 2rem; color: #e5e7eb; cursor: pointer; padding: 0; transition: all 0.2s ease;"
                                            onmouseover="highlightStars({{ i }})"
                                            onmouseout="resetStars()"
                                            onclick="selectRating({{ i }})">
                                        ‚òÖ
                                    </button>
                                {% endfor %}
                                <span id="rating-text" style="margin-left: 1rem; color: #6b7280; font-size: 0.9rem;"></span>
                            </div>
                            <div style="display: none;">
                                {{ form_widget(form.note) }}
                            </div>
                            <div style="color: #dc2626; font-size: 0.875rem; margin-top: 0.5rem;">
                                {{ form_errors(form.note) }}
                            </div>
                        </div>

                        {# Champ commentaire #}
                        <div style="margin-bottom: 1.5rem;">
                            {{ form_label(form.texte, 'Commentaire', {'label_attr': {'style': 'display: block; font-weight: 600; color: #374151; margin-bottom: 0.75rem;'}}) }}
                            {{ form_widget(form.texte, {'attr': {
                                'style': 'width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 6px; font-size: 0.95rem; font-family: inherit; resize: vertical; min-height: 120px;',
                                'placeholder': 'Partagez votre exp√©rience avec ce livre...'
                            }}) }}
                            <div style="color: #dc2626; font-size: 0.875rem; margin-top: 0.5rem;">
                                {{ form_errors(form.texte) }}
                            </div>
                        </div>

                        {# Bouton Envoyer mon avis #}
                        <button type="submit" 
                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; padding: 0.875rem 2rem; border-radius: 6px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 0.5rem;">
                            <i class="bi bi-send"></i> Envoyer mon avis
                        </button>
                    {{ form_end(form) }}
                </div>
            {% elseif is_granted('ROLE_USER') and user_has_review %}
                <div style="background: #ecfdf3; border: 1px solid #bbf7d0; border-radius: 8px; padding: 1rem; margin-bottom: 2rem;">
                    <p style="color: #16a34a; margin: 0; font-size: 0.9rem;">
                        <i class="bi bi-check-circle"></i> Vous avez d√©j√† laiss√© un avis pour ce livre.
                    </p>
                </div>
            {% else %}
                <div style="background: #fef3c7; border: 1px solid #fcd34d; border-radius: 8px; padding: 1rem; margin-bottom: 2rem;">
                    <p style="color: #d97706; margin: 0; font-size: 0.9rem;">
                        <a href="{{ path('app_login') }}" style="color: #d97706; text-decoration: underline;">Connectez-vous</a> pour laisser un avis.
                    </p>
                </div>
            {% endif %}

            {# Liste des avis approuv√©s #}
            {% if avis|length > 0 %}
                <div class="reviews-list">
                    <h3 style="font-size: 1.1rem; font-weight: 600; color: #374151; margin-bottom: 1.5rem;">
                        Avis des clients ({{ avis|length }})
                    </h3>
                    {% for avi in avis %}
                        <div style="background: #ffffff; border: 1px solid #e5e7eb; border-radius: 8px; padding: 1.5rem; margin-bottom: 1rem; transition: all 0.3s ease;">
                            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 0.75rem;">
                                <div>
                                    <div style="font-weight: 600; color: #1f2937; margin-bottom: 0.25rem;">
                                        {{ avi.user.email|split('@')|first|capitalize }}
                                    </div>
                                    <div style="font-size: 0.85rem; color: #6b7280;">
                                        {{ avi.dateCreation|date('d/m/Y √† H:i') }}
                                    </div>
                                </div>
                                <div style="display: flex; gap: 0.25rem;">
                                    {% for i in 1..5 %}
                                        {% if i <= avi.etoiles %}
                                            <span style="color: #fbbf24; font-size: 1.2rem;">‚òÖ</span>
                                        {% else %}
                                            <span style="color: #e5e7eb; font-size: 1.2rem;">‚òÖ</span>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div style="color: #374151; line-height: 1.6;">
                                {{ avi.texte|nl2br }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div style="text-align: center; padding: 2rem; color: #6b7280;">
                    <p>Aucun avis publi√© pour le moment.</p>
                </div>
            {% endif %}
        </div>
        
        <div class="actions-section">
            <a href="{{ path('app_livre_index') }}" class="btn-back">
                <i class="bi bi-arrow-left"></i> Retour √† la liste
            </a>
            
            {% if is_granted('ROLE_USER') %}
                <form method="POST" action="{{ path('wishlist_toggle', {'id': livre.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('wishlist-toggle-' ~ livre.id) }}">
                    <button type="submit" class="btn-wishlist" title="Ajouter/Retirer de la wishlist">
                        <i class="bi bi-heart"></i> <span>Ajouter aux favoris</span>
                    </button>
                </form>

                {% if livre.qte > 0 %}
                    <form method="POST" action="{{ path('panier_ajouter', {'id': livre.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('panier-add-' ~ livre.id) }}">
                        <input type="hidden" name="quantite" value="1">
                        <button type="submit" class="btn-add-cart">
                            <i class="bi bi-cart-plus"></i> Ajouter au panier
                        </button>
                    </form>
                {% else %}
                    <button type="button" class="btn-add-cart" disabled title="Produit rupture de stock">
                        <i class="bi bi-cart-x"></i> Rupture de stock
                    </button>
                {% endif %}
            {% endif %}
            
            {% if livre.pdfPath and can_download_pdf %}
                <a href="{{ path('app_livre_download_pdf', {'id': livre.id}) }}" class="btn-add-cart" style="background: #111827; margin-left: auto;">
                    <i class="bi bi-file-earmark-pdf"></i> T√©l√©charger le PDF
                </a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn-edit">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                {{ include('livre/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
