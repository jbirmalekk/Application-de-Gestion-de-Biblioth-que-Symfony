{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Liste des Livres</h4>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_livre_new') }}" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Nouveau Livre
                    </a>
                    {% endif %}
                </div>
                <div class="card-body">
                    {% if livres is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Quantité</th>
                                    <th>Prix</th>
                                    <th>ISBN</th>
                                    <th>Date Publication</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for livre in livres %}
                                <tr>
                                    <td>{{ livre.id }}</td>
                                    <td>{{ livre.titre }}</td>
                                    <td>
                                        <span class="badge {% if livre.qte > 0 %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ livre.qte }}
                                        </span>
                                    </td>
                                    <td>{{ livre.prix }} €</td>
                                    <td><code>{{ livre.isbn }}</code></td>
                                    <td>{{ livre.datapub ? livre.datapub|date('d/m/Y') : 'N/A' }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_livre_show', {'id': livre.id}) }}" 
                                               class="btn btn-outline-primary" 
                                               title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" 
                                               class="btn btn-outline-success" 
                                               title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_livre_delete', {'id': livre.id}) }}" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="bi bi-book" style="font-size: 3rem; color: #6c757d;"></i>
                        </div>
                        <h5 class="text-muted">Aucun livre trouvé</h5>
                        <p class="text-muted">Il n'y a aucun livre dans la base de données pour le moment.</p>
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_livre_new') }}" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Ajouter le premier livre
                        </a>
                        {% endif %}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const table = document.querySelector('.table');
            if (table) {
                new DataTable(table);
            }
        });
    </script>
{% endblock %}