{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Override pour supprimer arrière-plan bleu de la page */
        .index-page main {
            background: #ffffff;
        }

        .livre-page-container {
            padding: 2rem 0;
            background: #ffffff;
        }

        .livre-header {
            text-align: center;
            margin-bottom: 3rem;
            padding: 2rem 0;
        }

        .livre-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 0.5rem;
        }

        .livre-header p {
            font-size: 1rem;
            color: #666;
        }

        .livre-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.75rem;
        }

        .blog-card {
            background: #fff;
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .blog-card:hover {
            border-color: #6b7280;
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
            transform: translateY(-4px);
        }

        .blog-image {
            position: relative;
            overflow: hidden;
            height: 280px;
        }

        .blog-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .category-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: #fff;
            padding: 0.5rem 0.875rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.3px;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
        }

        .blog-content {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .author-info {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .author-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .author-details {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .author-name {
            font-size: 0.8rem;
            font-weight: 600;
            color: #333;
        }

        .publish-date {
            font-size: 0.75rem;
            color: #999;
        }

        .blog-card h3 {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0.75rem 0;
            line-height: 1.4;
        }

        .blog-card h3 a {
            color: #1a1a1a;
            text-decoration: none;
        }

        .blog-card h3 a:hover {
            color: #10b981;
        }

        .blog-card p {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 1rem;
            flex: 1;
        }

        .blog-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid #f0f0f0;
            gap: 1rem;
        }

        .price-tag {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1rem;
            font-weight: 700;
            color: #10b981;
        }

        .actions-card {
            display: flex;
            gap: 0.5rem;
        }

        .btn-card-action {
            width: 36px;
            height: 36px;
            padding: 0;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            background-color: #fff;
            color: #666;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.9rem;
            cursor: pointer;
        }

        .btn-card-action:hover {
            color: #1f2937;
            border-color: #bbb;
            background-color: #f9f9f9;
        }

        .btn-card-action.view {
            color: #10b981;
        }

        .btn-card-action.view:hover {
            border-color:rgb(235, 37, 219);
            background-color: #ecfdf5;
        }

        .btn-card-action.viewpanier:hover {
            border-color: #2563eb;
            background-color: #ecfdf5;
        }

        .btn-card-action.edit {
            color: #16a34a;
        }

        .btn-card-action.edit:hover {
            border-color: #16a34a;
            background-color: #f0fdf4;
        }

        .btn-card-action.delete {
            color: #dc2626;
        }

        .btn-card-action.delete:hover {
            border-color: #dc2626;
            background-color: #fef2f2;
        }

        .empty-state {
            grid-column: 1 / -1;
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-state-icon {
            font-size: 3.5rem;
            color: #ddd;
            margin-bottom: 1rem;
        }

        .empty-state-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            color: #999;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
        }

        @media (max-width: 768px) {
            .livre-header h1 {
                font-size: 1.75rem;
            }

            .books-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 1.25rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="livre-page-container">
    <!-- Header -->
    <div class="livre-header" data-aos="fade-up">
        <h1>Tous Nos Livres</h1>
        <p>Explorez notre collection complète</p>
    </div>

    <!-- Contenu -->
    <div class="livre-content">
            {% if is_granted('ROLE_ADMIN') %}
            <div style="margin-bottom: 1.5rem; text-align: right;">
                <a href="{{ path('app_livre_new') }}" class="btn btn-primary" style="border-radius: 8px;">
                    <i class="bi bi-plus-lg"></i> Nouveau Livre
                </a>
            </div>
            {% endif %}

            {% if livres is not empty %}
                <div class="books-grid">
                    {% for book in livres %}
                        <div class="blog-card">
                            <div class="blog-image">
                                {% if book.image %}
                                    <img src="{{ asset('assets/img/books/' ~ book.image) }}" alt="{{ book.titre }}" loading="lazy">
                                {% else %}
                                    <img src="{{ asset('assets/img/book.jpg') }}" alt="{{ book.titre }}" loading="lazy">
                                {% endif %}
                                <div class="category-badge">
                                    {% if book.qte > 0 %}
                                        Disponible
                                    {% else %}
                                        Épuisé
                                    {% endif %}
                                </div>
                            </div>
                            <div class="blog-content">
                                <div class="author-info">
                                    <img src="{{ asset('assets/img/book1.jpg') }}" alt="Livre" class="author-avatar">
                                    <div class="author-details">
                                        <span class="author-name">ISBN: {{ book.isbn }}</span>
                                        <span class="publish-date">{{ book.datapub|date('M Y') }}</span>
                                    </div>
                                </div>
                                <h3>
                                    <a href="{{ path('app_livre_show', {'id': book.id}) }}">
                                        {{ book.titre }}
                                    </a>
                                </h3>
                                <p>
                                    {% if book.categorie %}
                                        <strong>{{ book.categorie.designation }}</strong>
                                    {% endif %}
                                    {% if book.editeur %}
                                        <br><small>{{ book.editeur.nom }}</small>
                                    {% endif %}
                                </p>
                                <div class="blog-footer">
                                    <div class="price-tag">
                                        <i class="bi bi-currency-euro"></i> {{ book.prix|number_format(2, ',', '.') }}
                                    </div>
                                    <div class="actions-card">
                                        <a href="{{ path('app_livre_show', {'id': book.id}) }}" 
                                           class="btn-card-action view" 
                                           title="Voir">
                                            <i class="bi bi-eye" style="color:rgb(235, 37, 219);"></i>
                                        </a>
                                        {% if is_granted('ROLE_USER') and book.qte > 0 %}
                                            <a href="{{ path('panier_ajouter', {'id': book.id}) }}"
                                               class="btn-card-action viewpanier"
                                               title="Ajouter au panier">
                                                <i class="bi bi-cart-plus" style="color: #2563eb;" ></i>
                                            </a>
                                        {% endif %}
                                        {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('app_livre_edit', {'id': book.id}) }}" 
                                           class="btn-card-action edit" 
                                           title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" 
                                              action="{{ path('app_livre_delete', {'id': book.id}) }}" 
                                              style="display: inline;"
                                              onsubmit="return confirm('Êtes-vous sûr ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                            <button type="submit" class="btn-card-action delete" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="books-grid">
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="bi bi-search"></i>
                        </div>
                        <h3 class="empty-state-title">Aucun livre trouvé</h3>
                        <p class="empty-state-text">
                            Aucun livre n'est disponible pour le moment.
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const table = document.querySelector('.livre-table');
            if (table) {
                new DataTable(table, {
                    columnDefs: [
                        { orderable: false, targets: -1 }
                    ],
                    language: {
                        search: 'Rechercher:',
                        lengthMenu: 'Afficher _MENU_ entrées',
                        info: 'Affichage de _START_ à _END_ sur _TOTAL_ livres',
                        paginate: {
                            first: 'Première',
                            last: 'Dernière',
                            next: 'Suivante',
                            previous: 'Précédente'
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}