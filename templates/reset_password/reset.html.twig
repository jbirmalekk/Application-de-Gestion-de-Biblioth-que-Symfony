{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block head %}
    {{ parent() }}
    <meta name="turbo-visit-control" content="reload">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-key fa-3x text-success mb-3"></i>
                        <h2 class="h3">Nouveau mot de passe</h2>
                        <p class="text-muted">Choisissez un mot de passe sécurisé</p>
                    </div>

                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {{ form_start(resetForm, {'attr': {'data-turbo': 'false'}}) }}
                        <div class="mb-3">
                            {{ form_row(resetForm.plainPassword.first) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(resetForm.plainPassword.second) }}
                        </div>

                        <div class="alert alert-warning mb-4">
                            <i class="fas fa-shield-alt me-2"></i>
                            <small>
                                <strong>Exigences du mot de passe :</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Au moins 6 caractères</li>
                                    <li>Une lettre majuscule</li>
                                    <li>Une lettre minuscule</li>
                                    <li>Un chiffre</li>
                                </ul>
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" data-turbo="false">
                                <i class="fas fa-check-circle me-2"></i>Réinitialiser le mot de passe
                            </button>
                        </div>
                    {{ form_end(resetForm) }}

                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    .btn-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        border: none;
        border-radius: 10px;
        padding: 12px;
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(17, 153, 142, 0.4);
    }
    .form-control:focus {
        border-color: #11998e;
        box-shadow: 0 0 0 0.2rem rgba(17, 153, 142, 0.25);
    }
</style>
{% endblock %}
