<style>
    .form-container {
        background-color: #ffffff;
        padding: 0;
        border-radius: 20px;
        border: none;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.08);
        max-width: 800px;
        margin: 3rem auto;
        overflow: hidden;
    }
    
    .form-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
        margin: 0;
        border-bottom: none;
        border-radius: 0;
    }
    
    .form-header h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin: 0;
    }
    
    .form-body {
        padding: 2.5rem;
    }
    
    .form-group {
        margin-bottom: 1.75rem;
    }
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.75rem;
        margin-bottom: 1.75rem;
    }
    
    .form-row .form-group {
        margin-bottom: 0;
    }
    
    .form-row.full {
        grid-template-columns: 1fr;
    }
    
    @media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }
    }
    
    .form-label {
        display: block;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
        letter-spacing: -0.25px;
    }
    
    .form-control,
    .form-select {
        width: 100%;
        padding: 0.875rem 1.125rem;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95rem;
        color: #1f2937;
        background-color: #ffffff;
        transition: all 0.3s ease;
        font-family: inherit;
    }
    
    .form-control:focus,
    .form-select:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        background-color: #ffffff;
    }
    
    .form-control::placeholder {
        color: #9ca3af;
    }
    
    .form-text {
        display: block;
        margin-top: 0.5rem;
        font-size: 0.85rem;
        color: #6b7280;
    }
    
    .form-error {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        margin-top: 0.5rem;
        font-weight: 600;
    }
    
    .form-actions {
        display: flex;
        gap: 1rem;
        padding-top: 2rem;
        border-top: 2px solid #f0f0f0;
        margin-top: 2rem;
    }
    
    .btn-submit {
        padding: 0.875rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }
    
    .btn-cancel {
        padding: 0.875rem 2rem;
        background: #ffffff;
        color: #6b7280;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95rem;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-cancel:hover {
        background: #f9fafb;
        border-color: #d1d5db;
        transform: translateY(-2px);
    }
    
    .form-group label {
        font-weight: 600 !important;
        color: #374151 !important;
        margin-bottom: 0.75rem !important;
    }
    
    .form-check {
        padding-left: 0;
        margin-bottom: 1rem;
    }
    
    .form-check-input {
        margin-top: 0.3rem;
        cursor: pointer;
    }
    
    .form-check-label {
        margin-left: 0.5rem;
        color: #374151;
        cursor: pointer;
    }
    
    .form-group input[type="text"],
    .form-group input[type="email"],
    .form-group input[type="number"],
    .form-group input[type="date"],
    .form-group input[type="password"],
    .form-group textarea,
    .form-group select {
        width: 100%;
        padding: 0.875rem 1.125rem;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95rem;
        color: #1f2937;
        background-color: #ffffff;
        transition: all 0.3s ease;
        font-family: inherit;
    }
    
    .form-group input[type="text"]:focus,
    .form-group input[type="email"]:focus,
    .form-group input[type="number"]:focus,
    .form-group input[type="date"]:focus,
    .form-group input[type="password"]:focus,
    .form-group textarea:focus,
    .form-group select:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        background-color: #ffffff;
    }
    
    .form-group textarea {
        resize: vertical;
        min-height: 120px;
        line-height: 1.5;
    }
    
    .form-group small {
        font-size: 0.85rem;
        color: #6b7280;
        margin-top: 0.5rem;
    }
</style>

<div class="container-fluid" style="padding: 2rem 0;">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="form-container">
                <div class="form-header">
                    <h2>{% block form_title %}Ajouter un Auteur{% endblock %}</h2>
                </div>
                
                <div class="form-body">
                    <form method="post" novalidate="novalidate">
                        {% set fields = form|filter((v, k) => k not in ['_token', 'submit']) %}
                        
                        {% for i in 0..(((fields|length - 1) / 2)|round(0, 'floor')) %}
                        <div class="form-row {% if (i * 2 + 1) >= fields|length %}full{% endif %}">
                            {% set field_names = form|keys|filter((k) => k not in ['_token', 'submit']) %}
                            {% set field_1 = field_names[i * 2] %}
                            
                            {% if field_1 %}
                            <div class="form-group">
                                {{ form_label(form[field_1], null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form[field_1], {'attr': {'class': 'form-control'}}) }}
                                {% if form[field_1].vars.help %}
                                <small class="form-text">{{ form[field_1].vars.help }}</small>
                                {% endif %}
                                {{ form_errors(form[field_1], {'attr': {'class': 'form-error'}}) }}
                            </div>
                            {% endif %}
                            
                            {% set field_2 = field_names[i * 2 + 1] %}
                            {% if field_2 and (i * 2 + 1) < fields|length %}
                            <div class="form-group">
                                {{ form_label(form[field_2], null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form[field_2], {'attr': {'class': 'form-control'}}) }}
                                {% if form[field_2].vars.help %}
                                <small class="form-text">{{ form[field_2].vars.help }}</small>
                                {% endif %}
                                {{ form_errors(form[field_2], {'attr': {'class': 'form-error'}}) }}
                            </div>
                            {% endif %}
                        </div>
                        {% endfor %}
                        
                        <div class="form-actions">
                            <button type="submit" class="btn-submit">
                                <i class="bi bi-check-circle"></i> {% block button_label %}Enregistrer{% endblock %}
                            </button>
                            <a href="{{ path('app_auteur_index') }}" class="btn-cancel">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                        </div>
                        
                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
