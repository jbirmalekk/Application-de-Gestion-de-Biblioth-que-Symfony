<header id="header" class="header d-flex align-items-center position-relative">
    <div class="container position-relative d-flex align-items-center justify-content-between">

        <a href="{{ path('app_acceuil') }}" class="logo d-flex align-items-center me-auto me-xl-0">
            <h1 class="sitename">Bibliothèque</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="{{ path('app_acceuil') }}" class="active">Accueil</a></li>
                <li><a href="{{ path('app_editeur_index') }}">Editeurs</a></li>
                <li><a href="{{ path('app_categorie_index') }}">Catégorie</a></li>
                <li><a href="{{ path('app_livre_index') }}">Livres</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="dropdown">
                    <a href="#"><span>Gestion</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                    <ul>
                        <li><a href="{{ path('app_livre_new') }}">Ajouter un livre</a></li>
                        <li><a href="{{ path('app_auteur_new') }}">Ajouter un auteur</a></li>
                        <li><a href="{{ path('app_categorie_index') }}">Catégories</a></li>
                        <li><a href="{{ path('admin_coupons_index') }}">Coupons</a></li>
                    </ul>
                </li>
                {% endif %}
                
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <div class="header-social-links d-flex align-items-center gap-3">

            {# Icônes Wishlist / Notifications / Panier (utilisateur connecté) #}
            {% if is_granted('ROLE_USER') %}
                {# Notifications #}
                {% set notif_count = unread_notifications_count() %}
                <a href="{{ path('notifications_index') }}"
                   class="btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center position-relative"
                   style="border-radius: 999px; width: 34px; height: 34px; padding: 0;"
                   title="Mes notifications">
                    <i class="bi bi-bell"></i>
                    {% if notif_count > 0 %}
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                              style="font-size: 0.65rem; padding: 0.15em 0.4em;">
                            {{ notif_count }}
                        </span>
                    {% endif %}
                </a>

                {# Wishlist #}
                {% set wishlist_count = wishlist_count() %}
                <a href="{{ path('wishlist_index') }}"
                   class="btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center position-relative"
                   style="border-radius: 999px; width: 34px; height: 34px; padding: 0;"
                   title="Voir mes favoris">
                    <i class="bi bi-heart"></i>
                    {% if wishlist_count > 0 %}
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" 
                              style="font-size: 0.65rem; padding: 0.15em 0.4em;">
                            {{ wishlist_count }}
                        </span>
                    {% endif %}
                </a>

                <a href="{{ path('panier_index') }}"
                   class="btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center"
                   style="border-radius: 999px; width: 34px; height: 34px; padding: 0;"
                   title="Voir mon panier">
                    <i class="bi bi-cart3"></i>
                </a>
            {% endif %}
            
            <!-- Bouton Login/Logout -->
            <div class="auth-buttons" style="border-left: 1px solid #e0e0e0; padding-left: 15px; margin-left: 5px;">
                {% if app.user %}
                    <!-- Utilisateur connecté -->
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" 
                                type="button" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false"
                                style="border-radius: 8px; font-size: 13px;">
                            <i class="bi bi-person-circle"></i> {{ app.user.userIdentifier|split('@')|first }}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            {% if is_granted('ROLE_USER') %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('profile_index') }}">
                                        <i class="bi bi-person-circle"></i> Mon profil
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('subscription_index') }}">
                                        <i class="bi bi-star-fill text-warning"></i> Abonnement Premium
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('commande_mes_commandes') }}">
                                        <i class="bi bi-receipt-cutoff"></i> Mes commandes
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('admin') }}">
                                        <i class="bi bi-speedometer2"></i> Tableau de bord Admin
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                            {% endif %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </div>
                {% else %}
                    <!-- Non connecté -->
                    <a href="{{ path('app_login') }}" class="btn btn-sm btn-primary" style="border-radius: 8px; font-size: 13px; padding: 6px 15px;">
                        <i class="bi bi-box-arrow-in-right"></i> Connexion
                    </a>
                {% endif %}
            </div>
        </div>

    </div>
</header>