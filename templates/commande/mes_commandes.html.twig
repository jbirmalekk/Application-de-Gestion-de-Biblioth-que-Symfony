{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .orders-container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .orders-header {
            margin-bottom: 1.5rem;
        }

        .orders-header h1 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
            color: #111827;
        }

        .orders-list {
            background: #ffffff;
            border-radius: 6px;
            border: 1px solid #e5e7eb;
            overflow: hidden;
        }

        .order-row {
            display: grid;
            grid-template-columns: 1.2fr 2fr 1fr 1fr 1fr;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e5e7eb;
            font-size: 0.875rem;
            align-items: center;
        }

        .order-row.header {
            background: #f9fafb;
            font-weight: 600;
            color: #4b5563;
        }

        .order-row:last-child {
            border-bottom: none;
        }

        .order-status {
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            padding: 0.25rem 0.6rem;
            border-radius: 999px;
            font-size: 0.75rem;
        }

        .status-en_attente {
            background-color: #fef3c7;
            color: #92400e;
        }

        .status-validee {
            background-color: #dcfce7;
            color: #166534;
        }

        .status-expediee {
            background-color: #e0f2fe;
            color: #075985;
        }

        .status-livree {
            background-color: #e5e7eb;
            color: #374151;
        }

        .status-annulee {
            background-color: #fee2e2;
            color: #b91c1c;
        }

        .order-link {
            color: #2563eb;
            text-decoration: none;
            font-weight: 500;
        }

        .order-link:hover {
            text-decoration: underline;
        }

        .empty-orders {
            text-align: center;
            padding: 3rem 1.5rem;
            background: #ffffff;
            border-radius: 6px;
            border: 1px solid #e5e7eb;
        }
    </style>
{% endblock %}

{% block body %}
<div class="orders-container">
    <div class="orders-header">
        <h1>Mes commandes</h1>
    </div>

    {% if commandes is not empty %}
        <div class="orders-list">
            <div class="order-row header">
                <div>Commande</div>
                <div>Articles</div>
                <div>Date</div>
                <div>Statut</div>
                <div>Total</div>
            </div>
            {% for commande in commandes %}
                <div class="order-row">
                    <div>
                        <a href="{{ path('commande_show', {'id': commande.id}) }}" class="order-link">
                            #{{ commande.id }}
                        </a>
                    </div>
                    <div>
                        {% if commande.items|length > 0 %}
                            {% set first = commande.items|first %}
                            {{ first.livre.titre }}
                            {% if commande.items|length > 1 %}
                                <span style="color:#6b7280; font-size:0.8rem;">
                                    (+ {{ commande.items|length - 1 }} autre{{ commande.items|length - 1 > 1 ? 's' : '' }})
                                </span>
                            {% endif %}
                        {% else %}
                            —
                        {% endif %}
                    </div>
                    <div>{{ commande.createdAt ? commande.createdAt|date('d/m/Y H:i') : '' }}</div>
                    <div>
                        <span class="order-status status-{{ commande.statut }}">
                            {{ commande.statut|replace({
                                'en_attente': 'En attente',
                                'validee': 'Validée',
                                'expediee': 'Expédiée',
                                'livree': 'Livrée',
                                'annulee': 'Annulée'
                            }) }}
                        </span>
                    </div>
                    <div>{{ commande.total|number_format(2, ',', ' ') }} €</div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-orders">
            Vous n'avez pas encore passé de commande.
        </div>
    {% endif %}
</div>
{% endblock %}


