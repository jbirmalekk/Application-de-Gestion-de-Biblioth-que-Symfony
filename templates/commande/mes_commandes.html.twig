{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(180deg, #ffffff 0%, #f0f0f0 100%);
        }

        .orders-container {
            max-width: 1100px;
            margin: 3rem auto;
            padding: 0 1.5rem;
        }

        .orders-header {
            margin-bottom: 2.5rem;
            text-align: center;
        }

        .orders-header h1 {
            font-size: 3rem;
            font-weight: 700;
            margin: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .orders-header p {
            color: #6b7280;
            font-size: 1.1rem;
            margin-top: 0.5rem;
        }

        .orders-list {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .order-row {
            display: grid;
            grid-template-columns: 1fr 2.5fr 1.2fr 1.2fr 1fr;
            padding: 1.25rem 1.75rem;
            border-bottom: 1px solid #f0f0f0;
            font-size: 0.95rem;
            align-items: center;
            transition: all 0.3s ease;
        }

        .order-row.header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-weight: 600;
            color: #ffffff;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .order-row:not(.header):hover {
            background: rgba(102, 126, 234, 0.03);
            transform: translateX(5px);
        }

        .order-row:last-child {
            border-bottom: none;
        }

        .order-status {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.4rem 1rem;
            border-radius: 25px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

        .status-en_attente {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
        }

        .status-validee {
            background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
            color: #166534;
        }

        .status-expediee {
            background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
            color: #075985;
        }

        .status-livree {
            background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
            color: #374151;
        }

        .status-annulee {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #b91c1c;
        }

        .order-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        .order-link:hover {
            color: #764ba2;
            text-decoration: none;
            transform: translateX(3px);
        }

        .order-link::before {
            content: "üì¶";
            font-size: 1.1rem;
        }

        .order-items {
            color: #374151;
            font-weight: 500;
        }

        .order-items span {
            color: #9ca3af;
            font-size: 0.85rem;
            font-weight: 400;
        }

        .order-total {
            font-weight: 700;
            color: #667eea;
            font-size: 1.05rem;
        }

        .empty-orders {
            text-align: center;
            padding: 5rem 2rem;
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.08);
        }

        .empty-orders-icon {
            width: 120px;
            height: 120px;
            margin: 0 auto 2rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3.5rem;
            color: white;
        }

        .empty-orders h2 {
            font-size: 1.8rem;
            color: #1a1a1a;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .empty-orders p {
            color: #6b7280;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .btn-browse {
            display: inline-block;
            padding: 1rem 2.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-browse:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(102, 126, 234, 0.5);
            color: white;
        }

        @media (max-width: 768px) {
            .orders-header h1 {
                font-size: 2rem;
            }

            .order-row {
                grid-template-columns: 1fr;
                gap: 0.5rem;
                padding: 1rem;
            }

            .order-row.header {
                display: none;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="orders-container">
    <div class="orders-header">
        <h1>Mes Commandes</h1>
        <p>Suivez l'√©tat de vos commandes</p>
    </div>

    {% if commandes is not empty %}
        <div class="orders-list">
            <div class="order-row header">
                <div>Commande</div>
                <div>Articles</div>
                <div>Date</div>
                <div>Statut</div>
                <div>Total</div>
            </div>
            {% for commande in commandes %}
                <div class="order-row">
                    <div>
                        <a href="{{ path('commande_show', {'id': commande.id}) }}" class="order-link">
                            #{{ commande.id }}
                        </a>
                    </div>
                    <div class="order-items">
                        {% if commande.items|length > 0 %}
                            {% set first = commande.items|first %}
                            {{ first.livre.titre }}
                            {% if commande.items|length > 1 %}
                                <span>
                                    (+ {{ commande.items|length - 1 }} autre{{ commande.items|length - 1 > 1 ? 's' : '' }})
                                </span>
                            {% endif %}
                        {% else %}
                            ‚Äî
                        {% endif %}
                    </div>
                    <div>{{ commande.createdAt ? commande.createdAt|date('d/m/Y H:i') : '' }}</div>
                    <div>
                        <span class="order-status status-{{ commande.statut }}">
                            {{ commande.statut|replace({
                                'en_attente': 'En attente',
                                'validee': 'Valid√©e',
                                'expediee': 'Exp√©di√©e',
                                'livree': 'Livr√©e',
                                'annulee': 'Annul√©e'
                            }) }}
                        </span>
                    </div>
                    <div class="order-total">{{ commande.total|number_format(2, ',', ' ') }} ‚Ç¨</div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-orders">
            <div class="empty-orders-icon">
                <i class="bi bi-bag-x"></i>
            </div>
            <h2>Aucune commande</h2>
            <p>Vous n'avez pas encore pass√© de commande</p>
            <a href="{{ path('app_livre_index') }}" class="btn-browse">
                <i class="bi bi-book"></i> D√©couvrir nos livres
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}


