{% extends 'base.html.twig' %}

{% block title %}Gestion des coupons{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .index-page main {
            background: linear-gradient(180deg, #ffffff 0%, #f0f0f0 100%);
        }

        .admin-container {
            max-width: 1200px;
            margin: 3rem auto;
            padding: 0 1.5rem;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .admin-header h1 {
            font-size: 3rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
        }

        .btn-new {
            padding: 0.75rem 1.75rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
            font-size: 0.95rem;
        }

        .btn-new:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .coupons-table {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            border: none;
        }

        .table-header {
            display: grid;
            grid-template-columns: 1.2fr 1.1fr 0.9fr 1fr 1fr 0.9fr 1.5fr;
            padding: 1.5rem 1.75rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-weight: 700;
            font-size: 0.95rem;
            color: white;
            border-bottom: none;
            letter-spacing: 0.5px;
        }

        .table-row {
            display: grid;
            grid-template-columns: 1.2fr 1.1fr 0.9fr 1fr 1fr 0.9fr 1.5fr;
            padding: 1.25rem 1.75rem;
            align-items: center;
            font-size: 0.95rem;
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }

        .table-row:last-child {
            border-bottom: none;
        }

        .table-row:hover {
            background: rgba(102, 126, 234, 0.03);
            transform: translateX(5px);
        }

        .badge-code {
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
            color: white;
            border-radius: 10px;
            font-family: 'Courier New', monospace;
            font-weight: 700;
            display: inline-block;
            letter-spacing: 1px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .badge-type {
            padding: 0.4rem 1rem;
            border-radius: 25px;
            font-size: 0.875rem;
            font-weight: 600;
            display: inline-block;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .type-percentage {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
        }

        .type-fixed {
            background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
            color: #166534;
        }

        .type-free_shipping {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
        }

        .badge-status {
            padding: 0.4rem 1rem;
            border-radius: 25px;
            font-size: 0.875rem;
            font-weight: 600;
            display: inline-block;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .status-active {
            background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
            color: #166534;
        }

        .status-inactive {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
        }

        .status-expired {
            background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
            color: #6b7280;
        }

        .btn-actions {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .btn-edit {
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
            color: #1e40af;
            border: none;
            border-radius: 10px;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
            color: #1e40af;
        }

        .btn-delete {
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
            color: #991b1b;
            border: none;
            border-radius: 10px;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(153, 27, 27, 0.3);
        }

        .alert {
            padding: 1.25rem 1.5rem;
            border-radius: 15px;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        }

        .alert-success {
            background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
            color: #166534;
            border: none;
            font-weight: 600;
        }

        .empty-state {
            padding: 5rem 2rem;
            text-align: center;
            color: #6b7280;
        }

        .empty-state i {
            font-size: 4rem;
            color: #d1d5db;
            margin-bottom: 1.5rem;
        }

        .empty-state p {
            font-size: 1.25rem;
            margin: 0;
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
<div class="admin-container">
    <div class="admin-header">
        <h1><i class="bi bi-ticket-perforated"></i> Gestion des coupons</h1>
        <a href="{{ path('admin_coupons_new') }}" class="btn-new">
            <i class="bi bi-plus-circle"></i> Nouveau coupon
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" style="margin-bottom: 1.5rem; padding: 0.75rem 1rem; background-color: #ecfdf3; border: 1px solid #bbf7d0; border-radius: 4px; color: #166534; font-size: 0.875rem;">
            <i class="bi bi-check-circle"></i> {{ message }}
        </div>
    {% endfor %}

    {% if coupons is not empty %}
        <div class="coupons-table">
            <div class="table-header">
                <div>Code</div>
                <div>Type</div>
                <div>Valeur</div>
                <div>Montant min</div>
                <div>Usage</div>
                <div>Statut</div>
                <div>Actions</div>
            </div>
            {% for coupon in coupons %}
                <div class="table-row">
                    <div>
                        <span class="badge-code">{{ coupon.code }}</span>
                    </div>
                    <div>
                        <span class="badge-type type-{{ coupon.type }}">
                            {% if coupon.type == 'percentage' %}Pourcentage
                            {% elseif coupon.type == 'fixed' %}Montant fixe
                            {% else %}Livraison gratuite
                            {% endif %}
                        </span>
                    </div>
                    <div>
                        {% if coupon.type == 'percentage' %}
                            {{ coupon.valeur }}%
                        {% elseif coupon.type == 'fixed' %}
                            {{ coupon.valeur|number_format(2, ',', ' ') }} €
                        {% else %}
                            —
                        {% endif %}
                    </div>
                    <div>
                        {% if coupon.montantMinimum %}
                            {{ coupon.montantMinimum|number_format(2, ',', ' ') }} €
                        {% else %}
                            —
                        {% endif %}
                    </div>
                    <div>
                        {% if coupon.usageMax %}
                            {{ coupon.usageActuel }} / {{ coupon.usageMax }}
                        {% else %}
                            {{ coupon.usageActuel }} / ∞
                        {% endif %}
                    </div>
                    <div>
                        {% if not coupon.isValid() %}
                            <span class="badge-status status-expired">Expiré/Épuisé</span>
                        {% elseif coupon.actif %}
                            <span class="badge-status status-active">Actif</span>
                        {% else %}
                            <span class="badge-status status-inactive">Inactif</span>
                        {% endif %}
                    </div>
                    <div class="btn-actions">
                        <a href="{{ path('admin_coupons_edit', {'id': coupon.id}) }}" class="btn-edit">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <form method="POST" action="{{ path('admin_coupons_delete', {'id': coupon.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce coupon ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_coupon_' ~ coupon.id) }}">
                            <button type="submit" class="btn-delete">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <p>Aucun coupon créé pour le moment.</p>
            <a href="{{ path('admin_coupons_new') }}" class="btn-new" style="margin-top: 1rem;">
                <i class="bi bi-plus-circle"></i> Créer le premier coupon
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}

