{% extends 'base.html.twig' %}

{% block title %}Accueil - Bibliothèque{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .filters-sidebar {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 10px;
            border: 1px solid #e9ecef;
            padding: 1rem;
            box-shadow: 0 1px 6px rgba(0, 0, 0, 0.04);
            height: fit-content;
            position: sticky;
            top: 16px;
        }

        .filters-sidebar h5 {
            font-size: 0.85rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            text-transform: uppercase;
            letter-spacing: 0.4px;
        }

        .filter-group {
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #f0f0f0;
        }

        .filter-group:last-of-type {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .filter-group label {
            display: block;
            font-size: 0.8rem;
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.2px;
        }

        .filter-group input,
        .filter-group select {
            width: 100%;
            padding: 0.45rem 0.6rem;
            border: 1px solid #e6e6e6;
            border-radius: 6px;
            font-size: 0.85rem;
            background-color: #fff;
            color: #333;
            transition: all 0.2s ease;
        }

        .filter-group input::placeholder {
            color: #bdbdbd;
        }

        .filter-group input:focus,
        .filter-group select:focus {
            outline: none;
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.08);
        }

        .filter-buttons {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .btn-filter-action {
            padding: 0.5rem 0.75rem;
            border: none;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-transform: uppercase;
            letter-spacing: 0.2px;
        }

        .btn-filter-search {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            color: #fff;
            box-shadow: 0 3px 10px rgba(37, 99, 235, 0.18);
        }

        .btn-filter-search:hover {
            background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.22);
            transform: translateY(-1px);
        }

        .btn-filter-reset {
            background: #f6f6f6;
            color: #555;
            border: 1px solid #ececec;
        }

        .btn-filter-reset:hover {
            background: #f0f0f0;
            border-color: #d0d0d0;
        }

        .results-count {
            background: #f0f7ff;
            color: #2563eb;
            padding: 0.875rem 1rem;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            text-align: center;
            margin-top: 1rem;
            border: 1px solid #bfdbfe;
        }

        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.75rem;
        }

        .blog-card {
            background: #fff;
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .blog-card:hover {
            border-color: #2563eb;
            box-shadow: 0 8px 24px rgba(37, 99, 235, 0.15);
            transform: translateY(-4px);
        }

        .blog-image {
            position: relative;
            overflow: hidden;
            height: 280px;
        }

        .blog-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .category-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            color: #fff;
            padding: 0.5rem 0.875rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.3px;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
        }

        .blog-content {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .author-info {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .author-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .author-details {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .author-name {
            font-size: 0.8rem;
            font-weight: 600;
            color: #333;
        }

        .publish-date {
            font-size: 0.75rem;
            color: #999;
        }

        .blog-card h3 {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0.75rem 0;
            line-height: 1.4;
        }

        .blog-card h3 a {
            color: #1a1a1a;
            text-decoration: none;
        }

        .blog-card h3 a:hover {
            color: #2563eb;
        }

        .blog-card p {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 1rem;
            flex: 1;
        }

        .blog-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid #f0f0f0;
        }

        .reading-time {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            font-weight: 600;
            color: #2563eb;
        }

        .btn-read-more {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #2563eb;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.3px;
            transition: all 0.3s ease;
        }

        .btn-read-more:hover {
            gap: 0.75rem;
            color: #1d4ed8;
        }

        .btn-read-more i {
            transition: transform 0.3s ease;
        }

        .btn-read-more:hover i {
            transform: translateX(3px);
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            grid-column: 1 / -1;
        }

        .empty-state-icon {
            font-size: 3.5rem;
            color: #ddd;
            margin-bottom: 1rem;
        }

        .empty-state-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            color: #999;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
        }

        @media (max-width: 768px) {
            .filters-sidebar {
                position: static;
                margin-bottom: 2rem;
            }

            .books-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 1.25rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section id="blog-hero" class="blog-hero section">
        <div class="container-fluid p-0" data-aos="fade">
            <div class="blog-hero-slider swiper init-swiper">
                <script type="application/json" class="swiper-config">
                    {
                        "loop": true,
                        "speed": 1000,
                        "effect": "fade",
                        "autoplay": {
                            "delay": 5000
                        },
                        "slidesPerView": 1,
                        "navigation": {
                            "nextEl": ".swiper-button-next",
                            "prevEl": ".swiper-button-prev"
                        }
                    }
                </script>

                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="blog-hero-item">
                            <img src="{{ asset('assets/img/blog/blog-hero-1.webp') }}" alt="Bibliothèque moderne" class="img-fluid">
                            <div class="blog-hero-content">
                                <span class="category">Bibliothèque</span>
                                <h1>Bienvenue dans votre gestionnaire de bibliothèque</h1>
                                <div class="meta">
                                    <span class="author">Gérez votre collection facilement</span>
                                </div>
                                <a href="{{ path('app_livre_index') }}" class="read-more">Voir les livres <i class="bi bi-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
    </section>

    <!-- Catégories Section -->
    <section id="categories" class="categories section light-background">
        <div class="container section-title" data-aos="fade-up">
            <span class="description-title">Catégories</span>
            <h2>Nos Catégories de Livres</h2>
            <p>Explorez notre collection par catégorie</p>
        </div>

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4 justify-content-center">
                {% for categorie in categories %}
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="category-card text-center">
                        <div class="category-icon">
                            <i class="bi bi-bookmark"></i>
                        </div>
                        <h4>{{ categorie.designation }}</h4>
                        <p class="text-muted">Découvrez nos livres dans cette catégorie</p>
                        <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-outline-primary btn-sm">
                            Voir les livres
                        </a>
                    </div>
                </div>
                {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <p>Aucune catégorie disponible pour le moment.</p>
                        <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">Créer une catégorie</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Éditeurs Section -->
<section id="editeurs" class="editeurs section">
    <div class="container section-title" data-aos="fade-up">
        <span class="description-title">Éditeurs</span>
        <h2>Nos Éditeurs Partenaires</h2>
        <p>Découvrez les maisons d'édition de notre bibliothèque</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4">
            {% for editeur in editeurs %}
            <div class="col-lg-4 col-md-6">
                <div class="editeur-card">
                    <div class="editeur-header">
                        <h4>{{ editeur.nom }}</h4>
                        <span class="badge bg-primary">{{ editeur.pays ?? 'International' }}</span>
                    </div>
                    <div class="editeur-body">
                        <p class="editeur-description">
                            {% if editeur.adresse %}
                                <i class="bi bi-geo-alt"></i> {{ editeur.adresse }}
                            {% else %}
                                Éditeur de qualité
                            {% endif %}
                        </p>
                        <div class="editeur-meta">
                            {% if editeur.telephone %}
                                <span><i class="bi bi-telephone"></i> {{ editeur.telephone }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="editeur-footer">
                        <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="btn-read-more">
                            <span>Voir les publications</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <p>Aucun éditeur disponible pour le moment.</p>
                    <a href="{{ path('app_editeur_new') }}" class="btn btn-primary">Ajouter un éditeur</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

    <!-- Livres Récents Section -->
    <section id="livres-recents" class="featured-posts section light-background">
        <div class="container section-title" data-aos="fade-up">
            <span class="description-title">{% if search or selectedCategorie or selectedAuteur or selectedEditeur or prixMin or prixMax %}Résultats{% else %}Nouveautés{% endif %}</span>
            <h2>{% if search or selectedCategorie or selectedAuteur or selectedEditeur or prixMin or prixMax %}Résultats de recherche{% else %}Livres Récents{% endif %}</h2>
            <p>Découvrez notre sélection de livres avec les filtres avancés</p>
        </div>

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                <!-- Sidebar Filtres -->
                <div class="col-lg-3">
                    <div class="filters-sidebar">
                        <h5><i class="bi bi-funnel"></i> Filtres</h5>
                        <form method="GET" action="{{ path('app_acceuil') }}" class="filters-form">
                            
                            <!-- Recherche -->
                            <div class="filter-group">
                                <label for="search">Titre</label>
                                <input type="text" 
                                       id="search"
                                       name="search" 
                                       placeholder="Chercher..." 
                                       value="{{ search }}"
                                       class="form-control">
                            </div>

                            <!-- Catégorie -->
                            <div class="filter-group">
                                <label for="categorie">Catégorie</label>
                                <select id="categorie" name="categorie" class="form-select">
                                    <option value="">Toutes</option>
                                    {% for categorie in categories %}
                                        <option value="{{ categorie.id }}" 
                                                {% if selectedCategorie == categorie.id %}selected{% endif %}>
                                            {{ categorie.designation }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <!-- Auteur -->
                            <div class="filter-group">
                                <label for="auteur">Auteur</label>
                                <select id="auteur" name="auteur" class="form-select">
                                    <option value="">Tous</option>
                                    {% for auteur in auteurs %}
                                        <option value="{{ auteur.id }}" 
                                                {% if selectedAuteur == auteur.id %}selected{% endif %}>
                                            {{ auteur.nom }} {{ auteur.prenom }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <!-- Éditeur -->
                            <div class="filter-group">
                                <label for="editeur">Éditeur</label>
                                <select id="editeur" name="editeur" class="form-select">
                                    <option value="">Tous</option>
                                    {% for editeur in editeurs %}
                                        <option value="{{ editeur.id }}" 
                                                {% if selectedEditeur == editeur.id %}selected{% endif %}>
                                            {{ editeur.nom }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <!-- Prix Min -->
                            <div class="filter-group">
                                <label for="prix_min">Prix min (€)</label>
                                <input type="number" 
                                       id="prix_min"
                                       name="prix_min" 
                                       placeholder="0" 
                                       value="{{ prixMin ?? '' }}"
                                       step="0.01"
                                       min="0"
                                       class="form-control">
                            </div>

                            <!-- Prix Max -->
                            <div class="filter-group">
                                <label for="prix_max">Prix max (€)</label>
                                <input type="number" 
                                       id="prix_max"
                                       name="prix_max" 
                                       placeholder="9999" 
                                       value="{{ prixMax ?? '' }}"
                                       step="0.01"
                                       min="0"
                                       class="form-control">
                            </div>

                            <!-- Tri -->
                            <div class="filter-group">
                                <label for="sort_by">Trier par</label>
                                <select id="sort_by" name="sort_by" class="form-select">
                                    <option value="recent" {% if sortBy == 'recent' %}selected{% endif %}>Récents</option>
                                    <option value="price_asc" {% if sortBy == 'price_asc' %}selected{% endif %}>Prix ↑</option>
                                    <option value="price_desc" {% if sortBy == 'price_desc' %}selected{% endif %}>Prix ↓</option>
                                    <option value="title_asc" {% if sortBy == 'title_asc' %}selected{% endif %}>Titre A-Z</option>
                                    <option value="title_desc" {% if sortBy == 'title_desc' %}selected{% endif %}>Titre Z-A</option>
                                </select>
                            </div>

                            <!-- Boutons -->
                            <div class="filter-buttons">
                                <button type="submit" class="btn-filter-action btn-filter-search">
                                    <i class="bi bi-search"></i> Rechercher
                                </button>
                                <a href="{{ path('app_acceuil') }}" class="btn-filter-action btn-filter-reset">
                                    <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                                </a>
                            </div>

                            <!-- Compteur de résultats -->
                            {% if search or selectedCategorie or selectedAuteur or selectedEditeur or prixMin or prixMax %}
                                <div class="results-count">
                                    <i class="bi bi-check-circle"></i> {{ featuredBooks|length }} résultat(s)
                                </div>
                            {% endif %}
                        </form>
                    </div>
                </div>

                <!-- Liste des livres -->
                <div class="col-lg-9">
                    {% if featuredBooks is not empty %}
                        <div class="books-grid">
                            {% for book in featuredBooks %}
                                <div class="blog-card">
                                    <div class="blog-image">
                                        {% if book.image %}
                                            <img src="{{ asset('assets/img/books/' ~ book.image) }}" alt="{{ book.titre }}" loading="lazy">
                                        {% else %}
                                            <img src="{{ asset('assets/img/book.jpg') }}" alt="{{ book.titre }}" loading="lazy">
                                        {% endif %}
                                        <div class="category-badge">
                                            {% if book.qte > 0 %}
                                                Disponible
                                            {% else %}
                                                Épuisé
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="blog-content">
                                        <div class="author-info">
                                            <img src="{{ asset('assets/img/book1.jpg') }}" alt="Livre" class="author-avatar">
                                            <div class="author-details">
                                                <span class="author-name">ISBN: {{ book.isbn }}</span>
                                                <span class="publish-date">{{ book.datapub|date('M Y') }}</span>
                                            </div>
                                        </div>
                                        <h3>
                                            <a href="{{ path('app_livre_show', {'id': book.id}) }}">
                                                {{ book.titre }}
                                            </a>
                                        </h3>
                                        <p>
                                            {% if book.categorie %}
                                                <strong>{{ book.categorie.designation }}</strong>
                                            {% endif %}
                                            {% if book.editeur %}
                                                <br><small>{{ book.editeur.nom }}</small>
                                            {% endif %}
                                            <br>
                                            <span style="font-weight: 600; color: #111827;">
                                                {{ book.prix|number_format(2, ',', '.') }} €
                                            </span>
                                        </p>
                                        <div class="blog-footer">
                                            <div style="display: flex; gap: 0.5rem;">
                                                <a href="{{ path('app_livre_show', {'id': book.id}) }}"
                                                   class="btn-read-more"
                                                   style="padding: 0.35rem 0.75rem; font-size: 0.8rem;">
                                                    <span>Détails</span>
                                                    <i class="bi bi-arrow-right"></i>
                                                </a>
                                                {% if is_granted('ROLE_USER') and book.qte > 0 %}
                                                    <a href="{{ path('panier_ajouter', {'id': book.id}) }}"
                                                       class="btn-read-more"
                                                       style="background-color: #1f2937; border-color: #1f2937;"
                                                       title="Ajouter au panier">
                                                        <i class="bi bi-cart-plus"></i>
                                                    </a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="books-grid">
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="bi bi-search"></i>
                                </div>
                                <h3 class="empty-state-title">Aucun livre trouvé</h3>
                                <p class="empty-state-text">
                                    {% if search or selectedCategorie or selectedAuteur or selectedEditeur or prixMin or prixMax %}
                                        Essayez de modifier vos critères de recherche.
                                    {% else %}
                                        Aucun livre n'est disponible pour le moment.
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}