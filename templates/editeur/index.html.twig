{% extends 'base.html.twig' %}

{% block title %}Liste des Éditeurs{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Liste des Éditeurs</h4>
                    <a href="{{ path('app_editeur_new') }}" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Nouvel Éditeur
                    </a>
                </div>
                <div class="card-body">
                    {% if editeurs is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Pays</th>
                                    <th>Adresse</th>
                                    <th>Téléphone</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for editeur in editeurs %}
                                <tr>
                                    <td>{{ editeur.id }}</td>
                                    <td>
                                        <strong>{{ editeur.nom }}</strong>
                                    </td>
                                    <td>
                                        {% if editeur.pays %}
                                            <span class="badge bg-info">{{ editeur.pays }}</span>
                                        {% else %}
                                            <span class="text-muted">Non spécifié</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if editeur.adresse %}
                                            {{ editeur.adresse }}
                                        {% else %}
                                            <span class="text-muted">Non renseignée</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if editeur.telephone %}
                                            <code>{{ editeur.telephone }}</code>
                                        {% else %}
                                            <span class="text-muted">Non renseigné</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" 
                                               class="btn btn-outline-primary" 
                                               title="Voir détails">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" 
                                               class="btn btn-outline-success" 
                                               title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_editeur_delete', {'id': editeur.id}) }}" 
                                                  class="d-inline"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet éditeur ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ editeur.id) }}">
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="bi bi-building" style="font-size: 3rem; color: #6c757d;"></i>
                        </div>
                        <h5 class="text-muted">Aucun éditeur trouvé</h5>
                        <p class="text-muted">Il n'y a aucun éditeur dans la base de données pour le moment.</p>
                        <a href="{{ path('app_editeur_new') }}" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Ajouter le premier éditeur
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Vous pouvez ajouter des scripts JavaScript spécifiques à cette page ici
    </script>
{% endblock %}